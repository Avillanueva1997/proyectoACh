              id="TableAdministrativo"
              growing="true"
              growingThreshold="10"
              inset="false"
              items="{path: '/'}"
              alternateRowColors="true"> 
              <columns>
                <Column>
                  <Text text="Descripción del Puesto"/>
                </Column>
                <Column hAlign="End">
                  <Text text="Nombres y Apellidos"/>
                </Column>
              </columns>
              <items>
                <ColumnListItem>
                  <cells>
                    <Text text="{position}" />
                    <Text text="{name}" />
                  </cells>
                </ColumnListItem>
              </items>
            </Table>
          </IconTabFilter>
